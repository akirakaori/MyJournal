@inject MyJournal.Services.AppState AppState
@inject NavigationManager NavManager

@implements IDisposable

<div class="top-row ps-3 navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="">My Journal</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable sidenav">
    <nav class="nav flex-column nav-layout sidenav-content">

        @if (!AppState.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link nav-item-link" href="login">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Login</span>
                </NavLink>
            </div>
        }
        else
        {
            <!-- MAIN NAV -->
            <div class="nav-main">
                <div class="nav-item px-3">
                    <NavLink class="nav-link nav-item-link" href="dashboard">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link nav-item-link" href="journalentry">
                        <i class="bi bi-journal-text"></i>
                        <span>Write Journals</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link nav-item-link" href="calendar">
                        <i class="bi bi-calendar"></i>
                        <span>Calendar</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link nav-item-link" href="streaks">
                        <i class="bi bi-fire"></i>
                        <span>Streak Tracking</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link nav-item-link" href="viewjournals">
                        <i class="bi bi-book"></i>
                        <span>View Journals</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link nav-item-link" href="customTag">
                        <i class="bi bi-tags"></i>
                        <span>Custom Tags</span>
                    </NavLink>
                </div>
            </div>

            <!-- LOGOUT AT BOTTOM -->
            <div class="nav-footer px-3">
                <button class="nav-link nav-item-link btn btn-link logout-btn"
                        @onclick="Logout"
                        type="button">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </button>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }

    private void Logout()
    {
        AppState.Logout();
        NavManager.NavigateTo("/login", replace: true);
    }
}
