@page "/"
@using MudBlazor

@if (!AppState.IsLoggedIn)
{
    <!-- Hero Landing Page -->
    <div class="hero-wrap">
        <MudPaper Class="hero-card" Elevation="0" Rounded="true">
            <div class="hero-grid">
                <!-- Left -->
                <div class="hero-left">
                    <div class="hero-logo">
                        <img src="./images/myjournal-logo.jpg" alt="MyJournal" />
                        <span>MyJournal</span>
                    </div>
                    <h3 class="hero-title">
                        Your thoughts🧠 <br />
                        Your feelings✍️ <br />
                        <span class="hero-gradient">One place</span> — MyJournal
                    </h3>
                    <p class="hero-subtitle">
                        Access your journal from any browser and keep writing wherever you are.
                        <br />
                        A secure daily journal with moods, tags, streaks, analytics, and PDF export.
                    </p>
                    <div class="hero-actions">
                        @if (_userExists == true)
                        {
                            <MudButton Class="hero-btn"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       OnClick="GoLogin">
                                Login
                            </MudButton>
                        }
                        else if (_userExists == false)
                        {
                            <MudButton Class="hero-btn"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       OnClick="GoRegister">
                                Register
                            </MudButton>
                        }
                        else
                        {
                            <MudProgressCircular Indeterminate="true" Size="Size.Small" />
                            <span class="ms-3 text-muted">Checking...</span>
                        }
                    </div>
                </div>
                <!-- Right -->
                <div class="hero-right">
                    <img src="./images/myjournal-hero.jpg" alt="MyJournal App Preview" />
                </div>
            </div>
        </MudPaper>
    </div>
}
else
{
    <!-- Logged In View -->
    <MudContainer Class="py-4 home-dashboard-root">
        <MudPaper Elevation="0" Rounded="true" Class="home-header pa-6 mb-4">
            @if (!string.IsNullOrWhiteSpace(WelcomeName))
            {
                <MudText Typo="Typo.h4" Class="mb-2">Welcome, @WelcomeName 👋</MudText>
            }
            else
            {
                <MudText Typo="Typo.h4" Class="mb-2">MyJournal.exe</MudText>
            }

            <MudText Typo="Typo.body1">
                A secure daily journal with moods, tags, streaks, analytics, and PDF export — stored locally in SQLite.
            </MudText>
        </MudPaper>

        <!-- Streak Section Heading -->
        <div class="streak-section-heading">📊 Streak Tracking</div>
        <div class="streak-section-cards">
            <div class="streak-card streak-card--yellow">
                <span class="streak-emoji">🔥</span>
                <span class="streak-label">Current Streak</span>
                <span class="streak-value">@((streakData != null) ? streakData.CurrentStreak.ToString() : "—")</span>
            </div>
            <div class="streak-card streak-card--yellow">
                <span class="streak-emoji">🏆</span>
                <span class="streak-label">Longest Streak</span>
                <span class="streak-value">@((streakData != null) ? streakData.LongestStreak.ToString() : "—")</span>
            </div>
            <div class="streak-card streak-card--yellow">
                <span class="streak-emoji">📉</span>
                <span class="streak-label">Missed Days</span>
                <span class="streak-value">@((streakData != null) ? streakData.MissedDays.ToString() : "—")</span>
            </div>
        </div>

        <!-- Recent entries -->
        <MudPaper Elevation="0" Class="mt-4 pa-4 entry-list-root">
            <MudText Typo="Typo.h6" Class="mb-3">My Notes</MudText>

            <div class="entry-list">
                @if (RecentEntries == null || RecentEntries.Count == 0)
                {
                    <MudText Typo="Typo.body2" Class="text-muted">No recent entries</MudText>
                }
                else
                {
                    @for (int i = 0; i < RecentEntries.Count; i++)
                    {
                        var e = RecentEntries[i];
                        <div class="journal-entry-card mb-3" @onclick='() => NavManager.NavigateTo(string.Concat("/journalentry?date=", e.DateKey))'>
                            <div class="journal-entry-row">
                                <span class="journal-entry-emoji">📝</span>
                                <span class="journal-entry-title">@((string.IsNullOrWhiteSpace(e.Title)) ? "Untitled" : e.Title)</span>
                            </div>
                            <div class="journal-entry-date">@e.DateKey</div>
                        </div>
                    }
                }
            </div>
        </MudPaper>
    </MudContainer>
}

<style>
    .hero-wrap {
        padding: 24px;
    }

    .hero-card {
        border-radius: 18px;
        padding: 26px;
        border: 1px solid var(--mud-palette-divider);
        background: var(--mud-palette-surface);
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 22px;
        align-items: center;
    }

    .hero-left {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .hero-logo {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        color: var(--mud-palette-text-primary);
    }

        .hero-logo img {
            width: 38px;
            height: 38px;
            border-radius: 10px;
            object-fit: cover;
            border: 1px solid var(--mud-palette-divider);
        }

    .hero-title {
        margin: 0;
        line-height: 1.25;
        font-weight: 800;
        color: var(--mud-palette-text-primary);
    }

    .hero-gradient {
        background: linear-gradient(90deg, var(--mud-palette-primary), var(--mud-palette-secondary));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .hero-subtitle {
        margin: 0;
        color: var(--mud-palette-text-secondary);
        max-width: 58ch;
    }


    .hero-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 6px;
    }

    .hero-right {
        display: flex;
        justify-content: center;
    }

        .hero-right img {
            width: 100%;
            max-width: 520px;
            border-radius: 18px;
            object-fit: cover;
            border: 1px solid var(--mud-palette-divider);
            background: var(--mud-palette-background);
        }

    .home-header {
        border-radius: 16px;
        border: 1px solid var(--mud-palette-divider);
        background: var(--mud-palette-surface);
    }

    .streak-section-heading {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 20px;
        color: var(--mud-palette-text-primary);
    }

    .streak-section-cards {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        margin-bottom: 24px;
    }

    .streak-card {
        flex: 1;
        min-width: 120px;
        padding: 16px;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: var(--mud-palette-text-primary);
        background: var(--mud-palette-warning);
        transition: transform 0.3s;
    }

    .streak-card:hover {
        transform: translateY(-4px);
    }

    .streak-emoji {
        font-size: 1.5rem;
    }

    .journal-entry-card {
        padding: 16px;
        border-radius: 12px;
        background: var(--mud-palette-surface);
        border: 1px solid var(--mud-palette-divider);
        display: flex;
        flex-direction: column;
        gap: 8px;
        cursor: pointer;
        transition: transform 0.3s;
    }

    .journal-entry-card:hover {
        transform: translateY(-2px);
    }

    .journal-entry-row {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .journal-entry-emoji {
        font-size: 1.2rem;
    }

    @@media (max-width: 900px) {
        .hero-grid {
            grid-template-columns: 1fr;
        }

        .hero-wrap {
            padding: 14px;
        }
    }
</style>