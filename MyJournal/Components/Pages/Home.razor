@page "/"
@using MudBlazor

@if (!AppState.IsLoggedIn)
{
    <!-- Hero Landing Page -->
    <div class="hero-wrap">
        <MudPaper Class="hero-card" Elevation="0" Rounded="true">
            <div class="hero-grid">
                <!-- Left -->
                <div class="hero-left">
                    <div class="hero-logo">
                        <img src="./images/myjournal-logo.jpg" alt="MyJournal" />
                        <span>MyJournal</span>
                    </div>
                    <h3 class="hero-title">
                        Your thoughts🧠 <br />
                        Your feelings✍️ <br />
                        <span class="hero-gradient">One place</span> — MyJournal
                    </h3>
                    <p class="hero-subtitle">
                        Access your journal from any browser and keep writing wherever you are.
                        <br />
                        A secure daily journal with moods, tags, streaks, analytics, and PDF export.
                    </p>
                    <div class="hero-actions">
                        @if (_userExists == true)
                        {
                            <MudButton Class="hero-btn"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       OnClick="GoLogin">
                                Login
                            </MudButton>
                        }
                        else if (_userExists == false)
                        {
                            <MudButton Class="hero-btn"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       OnClick="GoRegister">
                                Register
                            </MudButton>
                        }
                        else
                        {
                            <MudProgressCircular Indeterminate="true" Size="Size.Small" />
                            <span class="ms-3 text-muted">Checking...</span>
                        }
                    </div>
                </div>
                <!-- Right -->
                <div class="hero-right">
                    <img src="./images/myjournal-hero.jpg" alt="MyJournal App Preview" />
                </div>
            </div>
        </MudPaper>
    </div>
}
else
{
    <!-- Logged In View -->
    <MudContainer Class="py-4 home-dashboard-root">
        <MudPaper Elevation="0" Rounded="true" Class="home-header pa-6 mb-4">
            @if (!string.IsNullOrWhiteSpace(WelcomeName))
            {
                <MudText Typo="Typo.h4" Class="mb-2">Welcome, @WelcomeName 👋</MudText>
            }
            else
            {
                <MudText Typo="Typo.h4" Class="mb-2">MyJournal.exe</MudText>
            }

            <MudText Typo="Typo.body1">
                A secure daily journal with moods, tags, streaks, analytics, and PDF export — stored locally in SQLite.
            </MudText>
        </MudPaper>
        <!-- Summary cards -->
        <MudGrid Class="summary-grid" Spacing="3">
            <MudItem xs="12" sm="6" md="4">
                <MudPaper Class="summary-card summary-card--blue pa-4" Elevation="1">
                    <div class="d-flex align-center">
                        <div class="summary-badge">
                            <MudIcon Icon="@Icons.Material.Filled.LocalFireDepartment" />
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <MudText Class="summary-value" Typo="Typo.h4">@((streakData != null) ? streakData.CurrentStreak.ToString() : "—")</MudText>
                            <MudText Class="summary-title" Typo="Typo.subtitle2">Current Streak</MudText>
                        </div>
                    </div>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudPaper Class="summary-card summary-card--pink pa-4" Elevation="1">
                    <div class="d-flex align-center">
                        <div class="summary-badge">
                            <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" />
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <MudText Class="summary-value" Typo="Typo.h4">@((streakData != null) ? streakData.LongestStreak.ToString() : "—")</MudText>
                            <MudText Class="summary-title" Typo="Typo.subtitle2">Longest Streak</MudText>
                        </div>
                    </div>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="6" md="4">
                <MudPaper Class="summary-card summary-card--yellow pa-4" Elevation="1">
                    <div class="d-flex align-center">
                        <div class="summary-badge">
                            <MudIcon Icon="@Icons.Material.Filled.EventBusy" />
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <MudText Class="summary-value" Typo="Typo.h4">@((streakData != null) ? streakData.MissedDays.ToString() : "—")</MudText>
                            <MudText Class="summary-title" Typo="Typo.subtitle2">Missed Days</MudText>
                        </div>
                    </div>
                </MudPaper>
            </MudItem>
        </MudGrid>

        <!-- Recent entries -->
        <MudPaper Elevation="0" Class="mt-4 pa-4 entry-list-root">
            <MudText Typo="Typo.h6" Class="mb-3">My Notes</MudText>

            <div class="entry-list">
                @if (RecentEntries == null || RecentEntries.Count == 0)
                {
                    <MudText Typo="Typo.body2" Class="text-muted">No recent entries</MudText>
                }
                else
                {
                    @for (int i = 0; i < RecentEntries.Count; i++)
                    {
                        var e = RecentEntries[i];
                        var variant = (i % 3) == 0 ? "entry-tile--blue" : ((i % 3) == 1 ? "entry-tile--pink" : "entry-tile--yellow");
                        <MudPaper Class=@($"entry-tile entry-tile--pastel mb-3 {variant}") Elevation="0" Rounded="true" @onclick='() => NavManager.NavigateTo(string.Concat("/journalentry?date=", e.DateKey))'>
                            <div class="d-flex align-center justify-space-between">
                                <div class="d-flex align-center">
                                    <div class="entry-badge me-3">
                                        <MudIcon Icon="@Icons.Material.Filled.Description" />
                                    </div>
                                    <div>
                                        <div class="entry-title">@((string.IsNullOrWhiteSpace(e.Title)) ? "Untitled" : e.Title)</div>
                                        <div class="entry-date">@e.DateKey</div>
                                    </div>
                                </div>
                                <div class="entry-actions">
                                    <MudIcon Icon="@Icons.Material.Filled.MoreVert" />
                                </div>
                            </div>
                        </MudPaper>
                    }
                }
            </div>
        </MudPaper>
    </MudContainer>
}

<style>
    .hero-wrap {
        padding: 24px;
    }

    .hero-card {
        border-radius: 18px;
        padding: 26px;
        border: 1px solid var(--mud-palette-divider);
        background: var(--mud-palette-surface);
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 22px;
        align-items: center;
    }

    .hero-left {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .hero-logo {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        color: var(--mud-palette-text-primary);
    }

        .hero-logo img {
            width: 38px;
            height: 38px;
            border-radius: 10px;
            object-fit: cover;
            border: 1px solid var(--mud-palette-divider);
        }

    .hero-title {
        margin: 0;
        line-height: 1.25;
        font-weight: 800;
        color: var(--mud-palette-text-primary);
    }

    .hero-gradient {
        background: linear-gradient(90deg, var(--mud-palette-primary), var(--mud-palette-secondary));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .hero-subtitle {
        margin: 0;
        color: var(--mud-palette-text-secondary);
        max-width: 58ch;
    }


    .hero-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 6px;
    }

    .hero-right {
        display: flex;
        justify-content: center;
    }

        .hero-right img {
            width: 100%;
            max-width: 520px;
            border-radius: 18px;
            object-fit: cover;
            border: 1px solid var(--mud-palette-divider);
            background: var(--mud-palette-background);
        }

    .home-header {
        border-radius: 16px;
        border: 1px solid var(--mud-palette-divider);
        background: var(--mud-palette-surface);
    }

    @@media (max-width: 900px) {
        .hero-grid {
            grid-template-columns: 1fr;
        }

        .hero-wrap {
            padding: 14px;
        }
    }
</style>