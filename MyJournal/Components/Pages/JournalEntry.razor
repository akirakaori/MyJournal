@* Pages/TextInput.razor *@
@page "/journalentry"
@using JournalMaui.Services
@using JournalMaui.Models
@inject JournalDatabases Db

<div class="page">
    <header class="header">
        <div>
            <h1 class="title">Journal</h1>
            <p class="subtitle">Write one entry per day.</p>
        </div>

        @* <div class="meta">
            <div class="metaItem">
                <span class="metaLabel">Created</span>
                <span class="metaValue">@CreatedAtText</span>
            </div>
            <div class="metaDivider"></div>
            <div class="metaItem">
                <span class="metaLabel">Updated</span>
                <span class="metaValue">@UpdatedAtText</span>
            </div>
        </div> *@
    </header>

    <section class="toolbarCard">
        <div class="toolbarRow">
            <div class="dateChip">
                <span class="dot"></span>
                <div class="dateText">
                    <span class="dateLabel">Selected date</span>
                    <span class="dateValue">@SelectedDate.ToString("dddd, dd MMM yyyy")</span>
                </div>




                <div class="metaItem">
                    <span class="metaLabel">Created</span>
                    <span class="metaValue">@CreatedAtText</span>
                </div>
                <div class="metaDivider"></div>
                <div class="metaItem">
                    <span class="metaLabel">Updated</span>
                    <span class="metaValue">@UpdatedAtText</span>
                </div>



            </div>

            <div class="btnGroup">


                <button class="btn btnPrimary" @onclick="StartSave" disabled="@IsBusy" title="Save entry (will ask for title)">
                    <span class="btnIcon">💾</span>
                    <span>Save</span>
                </button>

                <button class="btn btnDanger" @onclick="Delete" disabled="@IsBusy" title="Delete entry (date+title if title is set)">
                    <span class="btnIcon">🗑</span>
                    <span>Delete</span>
                </button>
            </div>
        </div>

        @* @if (IsBusy)
        {
            <div class="busyRow" aria-live="polite">
                <div class="spinner" role="status" aria-label="Working"></div>
                <span class="busyText">Working…</span>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Status))
        {
            <div class="status" aria-live="polite">@Status</div>
        } *@
    </section>

    <main class="contentGrid">
        <section class="editorCard">
            <div class="cardHeader">
                <h2 class="cardTitle">Entry</h2>
                <span class="hint">
                    @if (!string.IsNullOrWhiteSpace(CurrentTitle))
                    {
                        <span>Title: <b>@CurrentTitle</b></span>
                    }
                    else
                    {
                        <span>No title yet</span>
                    }
                </span>
            </div>

            <textarea class="editor"
                      @bind="Content"
                      placeholder="Start writing…"></textarea>

            <div class="editorFooter">
                <span class="muted">Characters: @((Content ?? string.Empty).Length)</span>
            </div>
        </section>
    </main>
</div>

@* -------- Title Modal -------- *@
@if (ShowTitleModal)
{
    <div class="modalOverlay" @onclick="CloseTitleModal">
        <div class="modalCard" @onclick:stopPropagation="true">
            <div class="modalHeader">
                <h3 class="modalTitle">Set a title</h3>
                <button class="modalX" @onclick="CloseTitleModal" title="Close">✕</button>
            </div>

            <div class="modalBody">
                <div class="modalField">
                    <label class="modalLabel">Title</label>
                    <input class="modalInput"
                           @bind="TitleInput"
                           placeholder="e.g., My day, Study notes, Goals..."
                           @onkeydown="HandleTitleKeyDown" />
                    @* <div class="modalHelp">This entry will be saved under <b>@SelectedDate.ToString("yyyy-MM-dd")</b> + this title.</div> *@
                </div>
            </div>

            <div class="modalFooter">
                <button class="btn btnGhost" @onclick="CloseTitleModal" disabled="@IsBusy">Cancel</button>
                <button class="btn btnPrimary" @onclick="ConfirmSave" disabled="@IsBusy">Save</button>
            </div>
        </div>
    </div>
}

