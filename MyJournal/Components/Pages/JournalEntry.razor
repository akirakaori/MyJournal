@namespace MyJournal.Components.Pages
@page "/journalentry"
@using JournalMaui.Services
@using JournalMaui.Models
@using System.Globalization
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="pageWrap @(ShowUnlockModal ? "blurAll" : "")">
    <div class="page">
        <header class="header">
            <div>
                <h1 class="title">Journal</h1>
                <p class="subtitle">Write one entry per day.</p>
            </div>
        </header>

        <section class="toolbarCard">
            <div class="toolbarRow">
                <div class="dateChip">
                    <span class="dot"></span>
                    <div class="dateText">
                        <span class="dateLabel">Selected date</span>
                        <span class="dateValue">@SelectedDate.ToString("dddd, dd MMM yyyy")</span>
                    </div>

                    <div class="metaItem">
                        <span class="metaLabel">Created</span>
                        <span class="metaValue">@CreatedAtText</span>
                    </div>
                    <div class="metaDivider"></div>
                    <div class="metaItem">
                        <span class="metaLabel">Updated</span>
                        <span class="metaValue">@UpdatedAtText</span>
                    </div>

                    @if (HasPin)
                    {
                        <div class="metaDivider"></div>
                        <div class="metaItem">
                            <span class="metaLabel">Lock</span>
                            <span class="metaValue">🔒 PIN</span>
                        </div>
                    }
                </div>

                <div class="btnGroup">
                    <button class="btn" @onclick="GenerateRandomEntry" disabled="@(IsBusy || IsLocked)" title="generate random paragraphs">
                        <span class="btnIcon">🎲</span>
                        <span>Bogus</span>
                    </button>

                    <button class="btn btnPrimary" @onclick="StartSave" disabled="@(IsBusy || IsLocked)" title="Save entry (will ask for title)">
                        <span class="btnIcon">💾</span>
                        <span>Save</span>
                    </button>

                    <button class="btn btnDanger" @onclick="Delete" disabled="@(IsBusy || IsLocked)" title="Delete entry (date+title if title is set)">
                        <span class="btnIcon">🗑</span>
                        <span>Delete</span>
                    </button>
                </div>
            </div>
        </section>

        <main class="contentGrid">
            <section class="editorCard">
                <div class="cardHeader">
                    <h2 class="cardTitle">Entry</h2>
                    <span class="hint">
                        @if (!string.IsNullOrWhiteSpace(CurrentTitle))
                        {
                            <span>Title: <b>@CurrentTitle</b></span>
                        }
                        else
                        {
                            <span>No title yet</span>
                        }
                    </span>
                </div>

                <div id="journal-description" class="editor"></div>

                <div class="editorFooter">
                    <span class="muted">Characters: @CharacterCount</span>
                    @if (IsLocked)
                    {
                        <span class="muted" style="margin-left:10px;">(Locked — enter PIN to view)</span>
                    }
                </div>
            </section>
        </main>
    </div>
</div>

@* -------- Unlock PIN Modal -------- *@
@if (ShowUnlockModal)
{
    <div class="modalOverlay" @onclick="OnUnlockOverlayClick">
        <div class="modalCard" @onclick:stopPropagation="true">
            <div class="modalHeader">
                <h3 class="modalTitle">Enter PIN to open</h3>
                <button class="modalX" @onclick="CloseUnlockModal" title="Close">✕</button>
            </div>

            <div class="modalBody">
                <div class="modalField">
                    <label class="modalLabel">PIN</label>

                    <div class="pinRow">
                        <input class="modalInput pinInput" type="password" value="@UnlockPinInput"
                               @oninput="OnUnlockPinInputChanged" placeholder="4 letters/numbers" maxlength="4"
                               autocomplete="off" @onkeydown="HandleUnlockKeyDown" />

                        <button type="button" class="pinBtn" @onclick="ClearUnlockPin" title="Clear">
                            ✕
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(UnlockError))
                    {
                        <div class="pinError">@UnlockError</div>
                    }

                    <div class="pinHelp">
                        This journal is protected. Enter the correct PIN to view it.
                    </div>

                    <div class="dangerLinkRow">
                        <button type="button" class="dangerLink" @onclick="ForceDeleteLockedJournal" disabled="@IsBusy">
                            Can’t remember PIN? Delete Journal
                        </button>
                    </div>
                </div>
            </div>

            <div class="modalFooter">
                <button class="btn btnGhost" @onclick="CloseUnlockModal" disabled="@IsBusy">Cancel</button>
                <button class="btn btnPrimary" @onclick="VerifyUnlockPin" disabled="@IsBusy">Unlock</button>
            </div>
        </div>
    </div>
}

@* -------- Title Modal (Save) -------- *@
@if (ShowTitleModal)
{
    <div class="modalOverlay" @onclick="CloseTitleModal">
        <div class="modalCard" @onclick:stopPropagation="true">
            <div class="modalHeader">
                <h3 class="modalTitle">Set a title</h3>
                <button class="modalX" @onclick="CloseTitleModal" title="Close">✕</button>
            </div>

            <div class="modalBody">
                <div class="modalField">
                    <label class="modalLabel">Title</label>
                    <input class="modalInput"
                           @bind="TitleInput"
                           @bind:event="oninput"
                           placeholder="e.g., My day, Study notes, Goals..."
                           @onkeydown="HandleTitleKeyDown" />
                </div>

                <div class="modalField pinField">
                    <label class="modalLabel">PIN (optional)</label>

                    <div class="pinRow">
                        <input class="modalInput pinInput"
                               type="@(PinMasked ? "password" : "text")"
                               @bind="PinInput"
                               @bind:event="oninput"
                               placeholder="4 letters/numbers"
                               maxlength="4"
                               autocomplete="off" />

                        <button type="button" class="pinBtn" @onclick="TogglePinMask" title="Show/Hide PIN">
                            @((MarkupString)(PinMasked ? EyeSvg : EyeOffSvg))
                        </button>

                        <button type="button" class="pinBtn" @onclick="ClearPin" title="Clear PIN">
                            ✕
                        </button>
                    </div>

                    <div class="pinHelp">
                        Leave empty for no lock. If set, it must be exactly 4 characters.
                    </div>

                    @if (!string.IsNullOrWhiteSpace(PinError))
                    {
                        <div class="pinError">@PinError</div>
                    }
                </div>

                <div class="modalField moodSection">
                    <label class="modalLabel moodSectionLabel">
                        How are you feeling today? <span style="color: var(--danger);">*</span>
                    </label>

                    <div class="categoryChips">
                        <button type="button" class="categoryChip @(SelectedPrimaryCategory == "Positive" ? "active" : "")"
                                @onclick="@(() => SelectPrimaryCategory("Positive"))">
                            Positive
                        </button>
                        <button type="button" class="categoryChip @(SelectedPrimaryCategory == "Neutral" ? "active" : "")"
                                @onclick="@(() => SelectPrimaryCategory("Neutral"))">
                            Neutral
                        </button>
                        <button type="button" class="categoryChip @(SelectedPrimaryCategory == "Negative" ? "active" : "")"
                                @onclick="@(() => SelectPrimaryCategory("Negative"))">
                            Negative
                        </button>
                    </div>

                    <div class="primaryMoodGrid">
                        @foreach (var mood in GetMoodsByCategory(SelectedPrimaryCategory))
                        {
                            var isSelected = PrimaryMood == mood.Name;
                            <button type="button" class="moodPillPrimary @(isSelected ? "selected" : "")"
                                    @onclick="() => SelectPrimaryMood(mood.Name)">
                                <span class="moodEmoji">@mood.Emoji</span>
                                <span class="moodLabel">@mood.Name</span>
                            </button>
                        }
                    </div>
                </div>

                <div class="modalField moodSection">
                    <label class="modalLabel moodSectionLabel">
                        Any other feelings? <span class="moodOptional">(optional, max 2)</span>
                    </label>

                    <div class="categoryChips">
                        <button type="button" class="categoryChip @(SelectedSecondaryCategory == "Positive" ? "active" : "")"
                                @onclick="@(() => SelectSecondaryCategory("Positive"))">
                            Positive
                        </button>
                        <button type="button" class="categoryChip @(SelectedSecondaryCategory == "Neutral" ? "active" : "")"
                                @onclick="@(() => SelectSecondaryCategory("Neutral"))">
                            Neutral
                        </button>
                        <button type="button" class="categoryChip @(SelectedSecondaryCategory == "Negative" ? "active" : "")"
                                @onclick="@(() => SelectSecondaryCategory("Negative"))">
                            Negative
                        </button>
                    </div>

                    <div class="secondaryMoodGrid">
                        @foreach (var mood in GetMoodsByCategory(SelectedSecondaryCategory))
                        {
                            var isSelectedSecondary = SecondaryMoods.Contains(mood.Name);
                            var isPrimary = mood.Name == PrimaryMood;
                            var isDisabled = isPrimary || (!isSelectedSecondary && SecondaryMoods.Count >= 2);

                            <button type="button"
                                    class="moodPillSecondary @(isSelectedSecondary ? "selected" : "") @(isDisabled ? "disabled" : "")"
                                    @onclick="() => OnSecondaryMoodToggle(mood.Name)"
                                    disabled="@isDisabled">
                                <span class="moodEmoji">@mood.Emoji</span>
                                <span class="moodLabel">@mood.Name</span>
                            </button>
                        }
                    </div>

                    @if (!string.IsNullOrWhiteSpace(MoodError))
                    {
                        <div class="pinError">@MoodError</div>
                    }
                </div>

                @* -------- TAGS (Prebuilt + Custom) -------- *@
                <div class="modalField moodSection">
                    <label class="modalLabel moodSectionLabel">
                        Tags <span class="moodOptional">(optional)</span>
                    </label>

                    @if (SelectedTags.Count > 0)
                    {
                        <div class="tagSelectedRow">
                            <span class="tagSelectedLabel">Selected:</span>
                            <div class="tagSelectedList">
                                @foreach (var t in SelectedTags.OrderBy(x => x))
                                {
                                    <span class="tagSelectedPill">@t</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="tagSelectedRow empty">
                            <span class="tagSelectedLabel">Selected:</span>
                            <span class="tagSelectedEmpty">None</span>
                        </div>
                    }

                    <div class="tagSectionTitle">Pre-built Tags</div>
                    <div class="tagChips">
                        @foreach (var tag in PrebuiltTags)
                        {
                            var active = SelectedTags.Contains(tag);
                            <button type="button"
                                    class="tagChip @(active ? "active" : "")"
                                    @onclick="() => ToggleTag(tag)">
                                @tag
                            </button>
                        }
                    </div>

                    @if (CustomTags.Count > 0)
                    {
                        <div class="tagSectionTitle">Custom Tags</div>
                        <div class="tagChips">
                            @foreach (var tag in CustomTags.Select(t => t.Name))
                            {
                                var active = SelectedTags.Contains(tag);
                                <button type="button"
                                        class="tagChip custom @(active ? "active" : "")"
                                        @onclick="() => ToggleTag(tag)">
                                    @tag
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="modalFooter">
                <button class="btn btnGhost" @onclick="CloseTitleModal" disabled="@IsBusy">Cancel</button>
                <button class="btn btnPrimary" @onclick="ConfirmSave" disabled="@IsBusy">Save</button>
            </div>
        </div>
    </div>
}

