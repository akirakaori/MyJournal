@* ViewJournals.razor *@
@page "/viewjournals"
@using JournalMaui.Models
@using MudBlazor
@using System.Globalization

<div class="page">

    <section class="card">
        <div class="cardHeader">
            <div class="headerLeft">
                <div class="titleRow">
                    <h2 class="cardTitle">Saved Journals</h2>
                    <span class="pill">@TotalCount</span>
                </div>

                <button class="btn small" type="button" @onclick="OpenExportDialog" title="Export journals to PDF">
                    📄 Export PDF
                </button>
            </div>

            <div class="filtersGrid">
                @* Row 1 *@
                <div class="f-search">
                    <label class="filterLabel">Search</label>
                    <input class="search"
                           type="search"
                           placeholder="Search journals by title"
                           value="@SearchTitle"
                           @oninput="OnSearchInput" />
                </div>

                <div class="f-mood">
                    <label class="filterLabel">Mood</label>
                    <div class="chipWrap chipWrap-vertical">
                        @foreach (var m in AllMoods)
                        {
                            var active = SelectedMoods.Contains(m);
                            <button type="button"
                                    class="chip @(active ? "active" : "")"
                                    @onclick="() => ToggleMood(m)">
                                @m
                            </button>
                        }
                        @if (SelectedMoods.Count > 0)
                        {
                            <button class="chipClear" type="button" @onclick="ClearMoodFilter">Clear</button>
                        }
                    </div>
                </div>

                <div class="f-tags">
                    <label class="filterLabel">Tags</label>
                    <div class="chipWrap chipWrap-vertical">
                        @foreach (var t in AllTags)
                        {
                            var active = SelectedTags.Contains(t);
                            <button type="button"
                                    class="chip @(active ? "active" : "")"
                                    @onclick="() => ToggleTag(t)">
                                @t
                            </button>
                        }
                        @if (SelectedTags.Count > 0)
                        {
                            <button class="chipClear" type="button" @onclick="ClearTagFilter">Clear</button>
                        }
                    </div>
                </div>

                @* Row 2 *@
                <div class="f-dates">
                    <label class="filterLabel">Date range</label>
                    <div style="position:relative;">
                        <MudButton Variant="Variant.Outlined"
                                   StartIcon="@Icons.Material.Filled.DateRange"
                                   OnClick="TogglePicker"
                                   Style="border-radius:12px; font-weight:650;">
                            @RangeLabel
                        </MudButton>

                        <MudPopover Open="_pickerOpen"
                                    AnchorOrigin="Origin.BottomRight"
                                    TransformOrigin="Origin.TopRight">
                            <MudPaper Class="pa-3" Elevation="8" Rounded="true" Style="min-width:360px; border-radius:14px;">
                                <MudStack Spacing="2">
                                    <MudText Typo="Typo.subtitle1" Style="font-weight:700;">Select date range</MudText>

                                    <MudDateRangePicker @bind-DateRange="_tempRange"
                                                        Variant="Variant.Outlined"
                                                        Margin="Margin.Dense"
                                                        Editable="false"
                                                        PickerVariant="PickerVariant.Inline"
                                                        DateFormat="dd MMM yyyy"
                                                        MaxDate="@DateTime.Today" />

                                    <MudStack Row="true" JustifyContent="flex-end" Spacing="1">
                                        <MudButton Variant="Variant.Text" OnClick="ClosePicker">Close</MudButton>
                                        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ApplyRange" Style="border-radius:12px;">
                                            Apply
                                        </MudButton>
                                    </MudStack>
                                </MudStack>
                            </MudPaper>
                        </MudPopover>
                    </div>
                </div>

                <div class="f-pagesize">
                    <label class="filterLabel">Rows</label>
                    <select class="select" value="@PageSize" @onchange="OnPageSizeChanged" title="Rows per page">
                        <option value="5">5 / page</option>
                        <option value="10">10 / page</option>
                        <option value="15">15 / page</option>
                        <option value="20">20 / page</option>
                    </select>
                </div>
            </div>
        </div>


        @if (IsLoading)
        {
            <div class="loading">
                <div class="spinner"></div>
                <span>Loading journals…</span>
            </div>
        }
        else if (Entries.Count == 0)
        {
            <div class="empty">
                <div class="emptyIcon">📓</div>
                <div>
                    <div class="emptyTitle">No matching journals</div>
                    <div class="emptySub">Try a different title keyword, mood/tag, or date range.</div>
                </div>
            </div>
        }
        else
        {
            <div class="tableWrap">
                <table class="journalsTable">
                    <thead>
                        <tr>
                            <th @onclick="() => SortBy(nameof(JournalEntries.DateKey))"
                                class="sortable @(SortColumn == nameof(JournalEntries.DateKey) ? "active" : "")">
                                Date @SortIcon(nameof(JournalEntries.DateKey))
                            </th>

                            <th @onclick="() => SortBy(nameof(JournalEntries.Title))"
                                class="sortable @(SortColumn == nameof(JournalEntries.Title) ? "active" : "")">
                                Title @SortIcon(nameof(JournalEntries.Title))
                            </th>

                            <th>Mood</th>
                            <th>Tags</th>
                            <th>PIN Protected</th>
                            <th>Content Preview</th>
                            <th style="text-align:right;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var e in Entries)
                        {
                            <tr>
                                <td class="td-date">@e.DateKey</td>

                                <td class="td-title">
                                    @GetTitle(e.Title)
                                </td>

                                <td class="td-mood">
                                    @if (!string.IsNullOrWhiteSpace(e.PrimaryMood))
                                    {
                                        <span class="mood-badge primary">@e.PrimaryMood</span>
                                        @if (!string.IsNullOrWhiteSpace(e.SecondaryMoodsCsv))
                                        {
                                            var secondary = e.SecondaryMoodsCsv.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                            foreach (var mood in secondary.Take(2))
                                            {
                                                <span class="mood-badge secondary">@mood.Trim()</span>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <span class="mood-none">-</span>
                                    }
                                </td>

                                <td class="td-tags">
                                    @if (!string.IsNullOrWhiteSpace(e.TagsCsv))
                                    {
                                        var tags = e.TagsCsv.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                        foreach (var tag in tags)
                                        {
                                            <span class="tag-pill">@tag.Trim()</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="tag-none">-</span>
                                    }
                                </td>

                                <td class="td-pin">
                                    @(e.HasPin ? "True" : "False")
                                </td>

                                <td class="td-content">
                                    @if (e.HasPin)
                                    {
                                        <span class="lockedPreview">Locked 🔒</span>
                                    }
                                    else
                                    {
                                        @* Strip HTML from Content for table preview snippet *@
                                        @Trunc(StripHtml(e.Content ?? ""), 180)
                                    }
                                </td>

                                <td class="td-actions">
                                    <button class="iconBtn view"
                                            type="button"
                                            title="View"
                                            aria-label="View"
                                            @onclick="() => RequestView(e)">
                                        👁️
                                    </button>

                                    <button class="iconBtn"
                                            type="button"
                                            title="Edit"
                                            aria-label="Edit"
                                            @onclick="() => RequestEdit(e.DateKey)">
                                        ✏️
                                    </button>

                                    <button class="iconBtn danger"
                                            type="button"
                                            title="Delete"
                                            aria-label="Delete"
                                            @onclick="() => RequestDelete(e.DateKey)">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="pager">
                <div class="pagerInfo">
                    Showing <b>@StartRow</b>–<b>@EndRow</b> of <b>@TotalCount</b>
                </div>

                <div class="pagerBtns">
                    <button class="pagerBtn" @onclick="PrevPage" disabled="@IsFirstPage">Prev</button>

                    @foreach (var p in PageNumbersToShow)
                    {
                        <button class="pagerBtn @(p == CurrentPage ? "active" : "")"
                                @onclick="() => GoToPage(p)">
                            @p
                        </button>
                    }

                    <button class="pagerBtn" @onclick="NextPage" disabled="@IsLastPage">Next</button>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ExportStatus))
        {
            <div class="export-status @(ExportSuccess ? "success" : "error")">
                @ExportStatus
            </div>
        }
    </section>

    <ExportPdfDialog IsVisible="@ShowExportDialog"
                     InitialFrom="@FromDate"
                     InitialTo="@ToDate"
                     OnClose="CloseExportDialog"
                     OnExported="HandleExported"
                     OnError="HandleExportError" />

    @if (ShowDeleteConfirm)
    {
        <div class="overlay" @onclick="CancelDelete">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Delete this journal?</div>
                <div class="dialogText">
                    This will permanently delete the entry for <b>@PendingDeleteDateKey</b>.
                </div>

                <div class="dialogActions">
                    <button class="btn ghost" type="button" @onclick="CancelDelete">Cancel</button>
                    <button class="btn danger" type="button" @onclick="ConfirmDelete" disabled="@IsDeleting">
                        @(IsDeleting ? "Deleting..." : "Delete")
                    </button>
                </div>
            </div>
        </div>
    }

    @if (ShowPinModal)
    {
        <div class="overlay" @onclick="CancelPin">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Enter PIN</div>
                <div class="dialogText">
                    This journal is PIN protected. Enter the 4-character PIN to continue.
                    <div style="margin-top:6px; color: rgba(255,255,255,0.55); font-size:12px;">
                        Date: <b>@PendingPinDateKey</b>
                    </div>
                </div>

                <input class="pinInput"
                       type="password"
                       maxlength="4"
                       value="@PinInput"
                       @oninput="OnPinInputChanged"
                       placeholder="****"
                       autocomplete="off" />

                @if (!string.IsNullOrWhiteSpace(PinError))
                {
                    <div class="pinError">@PinError</div>
                }

                <div class="pinDangerRow">
                    <button class="linkDanger"
                            type="button"
                            @onclick="OpenForceDeleteConfirm">
                        Can’t remember PIN? Force delete this journal
                    </button>
                </div>

                <div class="dialogActions" style="margin-top:14px;">
                    <button class="btn ghost" type="button" @onclick="CancelPin">Cancel</button>
                    <button class="btn" type="button" @onclick="ConfirmPin">Continue</button>
                </div>
            </div>
        </div>
    }

    @if (ShowForceDeleteConfirm)
    {
        <div class="overlay" @onclick="CloseForceDeleteConfirm">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Force delete journal?</div>
                <div class="dialogText">
                    You are about to delete the journal for <b>@PendingPinDateKey</b> <b>without the PIN</b>.
                    This cannot be undone.
                </div>

                <div class="dialogActions">
                    <button class="btn ghost" type="button" @onclick="CloseForceDeleteConfirm">Cancel</button>
                    <button class="btn danger" type="button" @onclick="ForceDeleteWithoutPin" disabled="@IsForceDeleting">
                        @(IsForceDeleting ? "Deleting..." : "Force Delete")
                    </button>
                </div>
            </div>
        </div>
    }

    <JournalDetailDialog IsVisible="@ShowDetailView"
                         Entry="@SelectedEntry"
                         OnClose="@CloseDetailView"
                         OnEditRequested="@EditFromDetailView" />
</div>

<style>

    .page {
        --bg: var(--mud-palette-background);
        --surface: var(--mud-palette-surface);
        --surface-rgb: var(--mud-palette-surface-rgb);
        --divider: var(--mud-palette-divider);
        --text: var(--mud-palette-text-primary);
        --text-rgb: var(--mud-palette-text-primary-rgb);
        --muted: var(--mud-palette-text-secondary);
        --muted-rgb: var(--mud-palette-text-secondary-rgb);
        --primary: var(--mud-palette-primary);
        --primary-rgb: var(--mud-palette-primary-rgb);
        --danger: var(--mud-palette-error);
        --danger-rgb: var(--mud-palette-error-rgb);
        --shadow: 0 12px 40px rgba(0,0,0,0.18);
        --radius: 16px;
        background: var(--bg);
        color: var(--text);
    }

    /* Sorting */
    .sortable {
        cursor: pointer;
        user-select: none;
    }

        .sortable:hover {
            background: rgba(var(--text-rgb), 0.04);
        }

        .sortable.active {
            color: var(--primary);
        }

    /* Card */
    .card {
        background: rgba(var(--surface-rgb), 0.96);
        border: 1px solid var(--divider);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    /* =========================
       ✅ CLEAN HEADER LAYOUT
       ========================= */
    .cardHeader {
        padding: 14px;
        display: grid;
        grid-template-columns: 260px 1fr;
        gap: 14px;
        align-items: start;
        flex-wrap: wrap;
        border-bottom: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.65);
    }

    .headerLeft {
        display: grid;
        gap: 10px;
        align-content: start;
    }

    .titleRow {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .cardTitle {
        margin: 0;
        font-size: 14px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--text);
        opacity: 0.9;
    }

    /* Count pill */
    .pill {
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        background: rgba(var(--surface-rgb), 0.75);
        border: 1px solid var(--divider);
        color: var(--text);
    }

    /* Filters grid */
    .filtersGrid {
        display: grid;
        grid-template-columns: 1.25fr 1fr 1fr;
        grid-template-areas:
            "search mood tags"
            "dates  dates pagesize";
        gap: 12px;
        align-items: end;
    }

    .f-search {
        grid-area: search;
    }

    .f-mood {
        grid-area: mood;
    }

    .f-tags {
        grid-area: tags;
    }

    .f-dates {
        grid-area: dates;
    }

    .f-pagesize {
        grid-area: pagesize;
        justify-self: end;
        width: 180px;
    }

    .filterLabel {
        display: block;
        font-size: 11px;
        color: rgba(var(--muted-rgb), 0.85);
        text-transform: uppercase;
        letter-spacing: 0.12em;
        font-weight: 900;
        margin: 0 0 6px 2px;
    }

    /* Inputs shared */
    .search,
    .dateInput,
    .select,
    .pinInput {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        outline: none;
        font-size: 13px;
    }

        /* Placeholder */
        .search::placeholder {
            color: rgba(var(--muted-rgb), 0.85);
        }

        /* Focus ring */
        .search:focus,
        .dateInput:focus,
        .select:focus,
        .pinInput:focus {
            border-color: rgba(var(--primary-rgb), 0.55);
            box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.18);
        }

    /* Search fits grid */
    .f-search .search {
        width: 100%;
        padding: 14px 16px; /* larger input */
        font-size: 15px;
    }

    /* Select */
    .select {
        cursor: pointer;
        width: 100%;
    }


    .chipWrap {
        display: flex;
        gap: 8px;
        flex-wrap: nowrap;
        overflow-x: auto;
        padding: 8px 10px;
        border: 1px solid var(--divider);
        border-radius: 12px;
        background: rgba(var(--surface-rgb), 0.55);
    }

    /* Vertical variant: fixed height, vertical scrolling */
    .chipWrap-vertical {
        max-height: 120px; /* limit vertical space */
        flex-wrap: nowrap;
        flex-direction: column;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 6px 8px;
    }

    .chipWrap-vertical::-webkit-scrollbar {
        width: 8px;
    }

    .chipWrap-vertical::-webkit-scrollbar-thumb {
        background: rgba(var(--text-rgb), 0.10);
        border-radius: 8px;
    }

        .chipWrap::-webkit-scrollbar {
            height: 8px;
        }

        .chipWrap::-webkit-scrollbar-thumb {
            background: rgba(var(--text-rgb), 0.10);
            border-radius: 999px;
        }

    .chip {
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        cursor: pointer;
        font-weight: 800;
        font-size: 12px;
        line-height: 1;
        user-select: none;
        white-space: nowrap;
        flex: 0 0 auto;
    }

        .chip:hover {
            background: rgba(var(--surface-rgb), 0.92);
            border-color: rgba(var(--text-rgb), 0.14);
        }

        .chip.active {
            border-color: rgba(var(--primary-rgb), 0.45);
            box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.16);
            background: rgba(var(--primary-rgb), 0.10);
        }

    .chipClear {
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px dashed rgba(var(--text-rgb), 0.20);
        background: transparent;
        color: rgba(var(--muted-rgb), 0.95);
        font-weight: 900;
        cursor: pointer;
        white-space: nowrap;
        flex: 0 0 auto;
    }

        .chipClear:hover {
            border-color: rgba(var(--text-rgb), 0.35);
            background: rgba(var(--text-rgb), 0.04);
        }

    /* =========================
       Date range compact
       ========================= */
    .dateRange {
        display: flex;
        gap: 10px;
        align-items: end;
        flex-wrap: wrap;
        padding: 8px 10px;
        border: 1px solid var(--divider);
        border-radius: 12px;
        background: rgba(var(--surface-rgb), 0.55);
    }

        .dateRange.compact {
            padding: 8px 10px;
            gap: 10px;
        }

    .rangeDash {
        color: rgba(var(--muted-rgb), 0.75);
        font-weight: 900;
        padding: 0 2px;
    }

    .dateField {
        display: grid;
        gap: 6px;
    }

    .dateLabel {
        font-size: 11px;
        color: rgba(var(--muted-rgb), 0.85);
        text-transform: uppercase;
        letter-spacing: 0.12em;
    }

    /* =========================================================
       Table
       ========================================================= */
    .tableWrap {
        overflow-x: auto;
    }

    .journalsTable {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
        background: transparent;
    }

        .journalsTable thead th {
            text-align: left;
            padding: 12px 14px;
            color: rgba(var(--muted-rgb), 0.95);
            border-bottom: 1px solid var(--divider);
            background: rgba(var(--surface-rgb), 0.65);
            white-space: nowrap;
        }

        .journalsTable tbody tr {
            background: rgba(var(--surface-rgb), 0.55);
        }

            .journalsTable tbody tr:hover {
                background: rgba(var(--primary-rgb), 0.06);
            }

        .journalsTable tbody td {
            padding: 12px 14px;
            border-bottom: 1px solid rgba(var(--text-rgb), 0.06);
            color: var(--text);
            vertical-align: top;
        }

    .td-date {
        font-weight: 800;
        color: rgba(var(--muted-rgb), 0.95);
        white-space: nowrap;
    }

    .td-title {
        font-weight: 900;
    }

    .td-pin {
        color: rgba(var(--muted-rgb), 0.95);
        font-weight: 800;
        white-space: nowrap;
    }

    .td-content {
        color: var(--muted);
    }

    .lockedPreview {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: rgba(var(--muted-rgb), 0.95);
        font-weight: 800;
        font-size: 12px;
    }

    /* Mood badges */
    .td-mood {
        min-width: 120px;
        vertical-align: top;
    }

    .mood-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 700;
        white-space: nowrap;
        margin-right: 4px;
        margin-bottom: 4px;
    }

        .mood-badge.primary {
            background: rgba(var(--primary-rgb), 0.15);
            border: 1px solid rgba(var(--primary-rgb), 0.35);
            color: var(--primary);
        }

        .mood-badge.secondary {
            background: rgba(var(--text-rgb), 0.08);
            border: 1px solid rgba(var(--text-rgb), 0.15);
            color: var(--text);
        }

    .mood-none {
        color: rgba(var(--muted-rgb), 0.6);
        font-style: italic;
    }

    /* Tags */
    .td-tags {
        min-width: 120px;
        max-width: 250px;
        vertical-align: top;
    }

    .tag-pill {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        white-space: nowrap;
        background: rgba(var(--text-rgb), 0.06);
        border: 1px solid rgba(var(--text-rgb), 0.12);
        color: var(--text);
        margin-right: 4px;
        margin-bottom: 4px;
    }

    .tag-none {
        color: rgba(var(--muted-rgb), 0.6);
        font-style: italic;
    }

    /* Actions */
    .td-actions {
        text-align: right;
        white-space: nowrap;
    }

    .iconBtn {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        cursor: pointer;
        display: inline-grid;
        place-items: center;
        line-height: 1;
        user-select: none;
        margin-left: 8px;
        transition: background .15s ease, border-color .15s ease, transform .05s ease;
    }

        .iconBtn:hover {
            background: rgba(var(--surface-rgb), 0.92);
            border-color: rgba(var(--text-rgb), 0.14);
        }

        .iconBtn:active {
            transform: translateY(1px);
        }

        .iconBtn.view {
            background: rgba(var(--primary-rgb), 0.12);
            border-color: rgba(var(--primary-rgb), 0.22);
        }

            .iconBtn.view:hover {
                background: rgba(var(--primary-rgb), 0.18);
                border-color: rgba(var(--primary-rgb), 0.35);
            }

        .iconBtn.danger {
            background: rgba(var(--danger-rgb), 0.10);
            border-color: rgba(var(--danger-rgb), 0.20);
        }

            .iconBtn.danger:hover {
                background: rgba(var(--danger-rgb), 0.16);
                border-color: rgba(var(--danger-rgb), 0.35);
            }

    /* =========================================================
       Loading / Empty
       ========================================================= */
    .loading {
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--muted);
    }

    .spinner {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        border: 2px solid rgba(var(--text-rgb), 0.18);
        border-top-color: rgba(var(--text-rgb), 0.55);
        animation: spin 0.9s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .empty {
        padding: 20px;
        display: grid;
        grid-template-columns: auto 1fr;
