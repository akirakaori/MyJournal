@page "/viewjournals"
@using JournalMaui.Models
@using System.Globalization
@using MyJournal.Components.Dialogs

<div class="page">

    <section class="card">
        <div class="cardHeader">
            <div style="display:flex; align-items:center; gap:10px; flex-wrap:wrap;">
                <h2 class="cardTitle">Saved Journals</h2>
                <span class="pill">@TotalCount</span>
                <button class="btn small" type="button" @onclick="OpenExportDialog" title="Export journals to PDF">
                    📄 Export PDF
                </button>
            </div>

            <div class="controls">
                <input class="search"
                       type="search"
                       placeholder="Search by title…"
                       value="@SearchTitle"
                       @oninput="OnSearchInput" />

                <div class="dateRange">
                    <div class="dateField">
                        <label class="dateLabel">From</label>
                        <input class="dateInput"
                               type="date"
                               value="@FromDateText"
                               @onchange="OnFromDateChanged" />
                    </div>

                    <div class="dateField">
                        <label class="dateLabel">To</label>
                        <input class="dateInput"
                               type="date"
                               value="@ToDateText"
                               @onchange="OnToDateChanged" />
                    </div>

                    <button class="btn ghost small"
                            type="button"
                            @onclick="ClearDates"
                            title="Clear date range">
                        Clear
                    </button>
                </div>

                <select class="select" value="@PageSize" @onchange="OnPageSizeChanged" title="Rows per page">
                    <option value="5">5 / page</option>
                    <option value="10">10 / page</option>
                    <option value="15">15 / page</option>
                    <option value="20">20 / page</option>
                </select>
            </div>
        </div>

        @if (IsLoading)
        {
            <div class="loading">
                <div class="spinner"></div>
                <span>Loading journals…</span>
            </div>
        }
        else if (Entries.Count == 0)
        {
            <div class="empty">
                <div class="emptyIcon">📓</div>
                <div>
                    <div class="emptyTitle">No matching journals</div>
                    <div class="emptySub">Try a different title keyword or date range.</div>
                </div>
            </div>
        }
        else
        {
            <div class="tableWrap">
                <table class="journalsTable">
                    <thead>
                        <tr>
                            <th @onclick="() => SortBy(nameof(JournalEntries.DateKey))"
                                class="sortable @(SortColumn == nameof(JournalEntries.DateKey) ? "active" : "")">
                                Date @SortIcon(nameof(JournalEntries.DateKey))
                            </th>

                            <th @onclick="() => SortBy(nameof(JournalEntries.Title))"
                                class="sortable @(SortColumn == nameof(JournalEntries.Title) ? "active" : "")">
                                Title @SortIcon(nameof(JournalEntries.Title))
                            </th>

                            <th>Mood</th>
                            <th>Tags</th>
                            <th>PIN Protected</th>
                            <th>Content Preview</th>
                            <th style="text-align:right;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var e in Entries)
                        {
                            <tr>
                                <td class="td-date">@e.DateKey</td>

                                <td class="td-title">
                                    @GetTitle(e.Title)
                                </td>

                                <td class="td-mood">
                                    @if (!string.IsNullOrWhiteSpace(e.PrimaryMood))
                                    {
                                        <span class="mood-badge primary">@e.PrimaryMood</span>
                                        @if (!string.IsNullOrWhiteSpace(e.SecondaryMoodsCsv))
                                        {
                                            var secondary = e.SecondaryMoodsCsv.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                            foreach (var mood in secondary.Take(2))
                                            {
                                                <span class="mood-badge secondary">@mood.Trim()</span>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <span class="mood-none">-</span>
                                    }
                                </td>

                                <td class="td-tags">
                                    @if (!string.IsNullOrWhiteSpace(e.TagsCsv))
                                    {
                                        var tags = e.TagsCsv.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                        foreach (var tag in tags)
                                        {
                                            <span class="tag-pill">@tag.Trim()</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="tag-none">-</span>
                                    }
                                </td>

                                <td class="td-pin">
                                    @(e.HasPin ? "True" : "False")
                                </td>

                                <td class="td-content">
                                    @if (e.HasPin)
                                    {
                                        <span class="lockedPreview">Locked 🔒</span>
                                    }
                                    else
                                    {
                                        @Trunc(StripHtml(e.Content), 180)
                                    }
                                </td>

                                <td class="td-actions">
                                    <button class="iconBtn view"
                                            type="button"
                                            title="View"
                                            aria-label="View"
                                            @onclick="() => RequestView(e)">
                                        👁️
                                    </button>

                                    <button class="iconBtn"
                                            type="button"
                                            title="Edit"
                                            aria-label="Edit"
                                            @onclick="() => RequestEdit(e.DateKey)">
                                        ✏️
                                    </button>

                                    <button class="iconBtn danger"
                                            type="button"
                                            title="Delete"
                                            aria-label="Delete"
                                            @onclick="() => RequestDelete(e.DateKey)">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="pager">
                <div class="pagerInfo">
                    Showing <b>@StartRow</b>–<b>@EndRow</b> of <b>@TotalCount</b>
                </div>

                <div class="pagerBtns">
                    <button class="pagerBtn" @onclick="PrevPage" disabled="@IsFirstPage">Prev</button>

                    @foreach (var p in PageNumbersToShow)
                    {
                        <button class="pagerBtn @(p == CurrentPage ? "active" : "")"
                                @onclick="() => GoToPage(p)">
                            @p
                        </button>
                    }

                    <button class="pagerBtn" @onclick="NextPage" disabled="@IsLastPage">Next</button>
                </div>
            </div>
        }

        @* Export Status *@
        @if (!string.IsNullOrWhiteSpace(ExportStatus))
        {
            <div class="export-status @(ExportSuccess ? "success" : "error")">
                @ExportStatus
            </div>
        }
    </section>

    @* Export PDF Dialog *@
    <ExportPdfDialog IsVisible="@ShowExportDialog"
                     InitialFrom="@FromDate"
                     InitialTo="@ToDate"
                     OnClose="CloseExportDialog"
                     OnExported="HandleExported"
                     OnError="HandleExportError" />

    @* Delete confirm (non-PIN entries) *@
    @if (ShowDeleteConfirm)
    {
        <div class="overlay" @onclick="CancelDelete">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Delete this journal?</div>
                <div class="dialogText">
                    This will permanently delete the entry for <b>@PendingDeleteDateKey</b>.
                </div>

                <div class="dialogActions">
                    <button class="btn ghost" type="button" @onclick="CancelDelete">Cancel</button>
                    <button class="btn danger" type="button" @onclick="ConfirmDelete" disabled="@IsDeleting">
                        @(IsDeleting ? "Deleting..." : "Delete")
                    </button>
                </div>
            </div>
        </div>
    }

    @* PIN Prompt Modal *@
    @if (ShowPinModal)
    {
        <div class="overlay" @onclick="CancelPin">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Enter PIN</div>
                <div class="dialogText">
                    This journal is PIN protected. Enter the 4-character PIN to continue.
                    <div style="margin-top:6px; color: rgba(255,255,255,0.55); font-size:12px;">
                        Date: <b>@PendingPinDateKey</b>
                    </div>
                </div>

                <input class="pinInput"
                       type="password"
                       maxlength="4"
                       value="@PinInput"
                       @oninput="OnPinInputChanged"
                       placeholder="****"
                       autocomplete="off" />

                @if (!string.IsNullOrWhiteSpace(PinError))
                {
                    <div class="pinError">@PinError</div>
                }

                <div class="pinDangerRow">
                    <button class="linkDanger"
                            type="button"
                            @onclick="OpenForceDeleteConfirm">
                        Can’t remember PIN? Force delete this journal
                    </button>
                </div>

                <div class="dialogActions" style="margin-top:14px;">
                    <button class="btn ghost" type="button" @onclick="CancelPin">Cancel</button>
                    <button class="btn" type="button" @onclick="ConfirmPin">Continue</button>
                </div>
            </div>
        </div>
    }

    @* Force Delete Confirm Modal *@
    @if (ShowForceDeleteConfirm)
    {
        <div class="overlay" @onclick="CloseForceDeleteConfirm">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Force delete journal?</div>
                <div class="dialogText">
                    You are about to delete the journal for <b>@PendingPinDateKey</b> <b>without the PIN</b>.
                    This cannot be undone.
                </div>

                <div class="dialogActions">
                    <button class="btn ghost" type="button" @onclick="CloseForceDeleteConfirm">Cancel</button>
                    <button class="btn danger" type="button" @onclick="ForceDeleteWithoutPin" disabled="@IsForceDeleting">
                        @(IsForceDeleting ? "Deleting..." : "Force Delete")
                    </button>
                </div>
            </div>
        </div>
    }

    @* Detail View Dialog *@
    <JournalDetailDialog IsVisible="@ShowDetailView"
                         Entry="@SelectedEntry"
                         OnClose="@CloseDetailView"
                         OnEditRequested="@EditFromDetailView" />
</div>


<style>
    /* =========================================================
       VIEW JOURNALS – THEME AWARE (LIGHT + DARK)
       No hard-coded dark :root colors
       ========================================================= */

    .page {
        --bg: var(--mud-palette-background);
        --surface: var(--mud-palette-surface);
        --surface-rgb: var(--mud-palette-surface-rgb);
        --divider: var(--mud-palette-divider);
        --text: var(--mud-palette-text-primary);
        --text-rgb: var(--mud-palette-text-primary-rgb);
        --muted: var(--mud-palette-text-secondary);
        --muted-rgb: var(--mud-palette-text-secondary-rgb);
        --primary: var(--mud-palette-primary);
        --primary-rgb: var(--mud-palette-primary-rgb);
        --danger: var(--mud-palette-error);
        --danger-rgb: var(--mud-palette-error-rgb);
        --shadow: 0 12px 40px rgba(0,0,0,0.18);
        --radius: 16px;
        background: var(--bg);
        color: var(--text);
    }

    /* Sorting */
    .sortable {
        cursor: pointer;
        user-select: none;
    }

        .sortable:hover {
            background: rgba(var(--text-rgb), 0.04);
        }

        .sortable.active {
            color: var(--primary);
        }

    /* Card */
    .card {
        background: rgba(var(--surface-rgb), 0.96);
        border: 1px solid var(--divider);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .cardHeader {
        padding: 14px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
        border-bottom: 1px solid var(--divider);
    }

    .cardTitle {
        margin: 0;
        font-size: 14px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--text);
        opacity: 0.9;
    }

    /* Count pill */
    .pill {
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        background: rgba(var(--surface-rgb), 0.75);
        border: 1px solid var(--divider);
        color: var(--text);
    }

    /* Controls */
    .controls {
        display: flex;
        gap: 10px;
        align-items: end;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    /* Inputs shared */
    .search,
    .dateInput,
    .select,
    .pinInput {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        outline: none;
        font-size: 13px;
    }

        /* Placeholder */
        .search::placeholder {
            color: rgba(var(--muted-rgb), 0.85);
        }

        /* Focus ring */
        .search:focus,
        .dateInput:focus,
        .select:focus,
        .pinInput:focus {
            border-color: rgba(var(--primary-rgb), 0.55);
            box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.18);
        }

    /* Search width */
    .search {
        width: min(320px, 100%);
    }

    /* Date range block */
    .dateRange {
        display: flex;
        gap: 10px;
        align-items: end;
        flex-wrap: wrap;
        padding: 8px 10px;
        border: 1px solid var(--divider);
        border-radius: 12px;
        background: rgba(var(--surface-rgb), 0.55);
    }

    .dateField {
        display: grid;
        gap: 6px;
    }

    .dateLabel {
        font-size: 11px;
        color: rgba(var(--muted-rgb), 0.85);
        text-transform: uppercase;
        letter-spacing: 0.12em;
    }

    /* Select */
    .select {
        cursor: pointer;
    }

    /* =========================================================
       Table
       ========================================================= */
    .tableWrap {
        overflow-x: auto;
    }

    .journalsTable {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
        background: transparent;
    }

        .journalsTable thead th {
            text-align: left;
            padding: 12px 14px;
            color: rgba(var(--muted-rgb), 0.95);
            border-bottom: 1px solid var(--divider);
            background: rgba(var(--surface-rgb), 0.65);
            white-space: nowrap;
        }

        .journalsTable tbody tr {
            background: rgba(var(--surface-rgb), 0.55);
        }

            .journalsTable tbody tr:hover {
                background: rgba(var(--primary-rgb), 0.06);
            }

        .journalsTable tbody td {
            padding: 12px 14px;
            border-bottom: 1px solid rgba(var(--text-rgb), 0.06);
            color: var(--text);
            vertical-align: top;
        }

    .td-date {
        font-weight: 800;
        color: rgba(var(--muted-rgb), 0.95);
        white-space: nowrap;
    }

    .td-title {
        font-weight: 900;
    }

    .td-pin {
        color: rgba(var(--muted-rgb), 0.95);
        font-weight: 800;
        white-space: nowrap;
    }

    .td-content {
        color: var(--muted);
    }

    .lockedPreview {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: rgba(var(--muted-rgb), 0.95);
        font-weight: 800;
        font-size: 12px;
    }

    /* Mood badges */
    .td-mood {
        min-width: 120px;
        vertical-align: top;
    }

    .mood-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 700;
        white-space: nowrap;
        margin-right: 4px;
        margin-bottom: 4px;
    }

        .mood-badge.primary {
            background: rgba(var(--primary-rgb), 0.15);
            border: 1px solid rgba(var(--primary-rgb), 0.35);
            color: var(--primary);
        }

        .mood-badge.secondary {
            background: rgba(var(--text-rgb), 0.08);
            border: 1px solid rgba(var(--text-rgb), 0.15);
            color: var(--text);
        }

    .mood-none {
        color: rgba(var(--muted-rgb), 0.6);
        font-style: italic;
    }

    /* Tags */
    .td-tags {
        min-width: 120px;
        max-width: 250px;
        vertical-align: top;
    }

    .tag-pill {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        white-space: nowrap;
        background: rgba(var(--text-rgb), 0.06);
        border: 1px solid rgba(var(--text-rgb), 0.12);
        color: var(--text);
        margin-right: 4px;
        margin-bottom: 4px;
    }

    .tag-none {
        color: rgba(var(--muted-rgb), 0.6);
        font-style: italic;
    }

    /* Actions */
    .td-actions {
        text-align: right;
        white-space: nowrap;
    }

    .iconBtn {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        cursor: pointer;
        display: inline-grid;
        place-items: center;
        line-height: 1;
        user-select: none;
        margin-left: 8px;
        transition: background .15s ease, border-color .15s ease, transform .05s ease;
    }

        .iconBtn:hover {
            background: rgba(var(--surface-rgb), 0.92);
            border-color: rgba(var(--text-rgb), 0.14);
        }

        .iconBtn:active {
            transform: translateY(1px);
        }

        .iconBtn.view {
            background: rgba(var(--primary-rgb), 0.12);
            border-color: rgba(var(--primary-rgb), 0.22);
        }

            .iconBtn.view:hover {
                background: rgba(var(--primary-rgb), 0.18);
                border-color: rgba(var(--primary-rgb), 0.35);
            }

        .iconBtn.danger {
            background: rgba(var(--danger-rgb), 0.10);
            border-color: rgba(var(--danger-rgb), 0.20);
        }

            .iconBtn.danger:hover {
                background: rgba(var(--danger-rgb), 0.16);
                border-color: rgba(var(--danger-rgb), 0.35);
            }

    /* =========================================================
       Loading / Empty
       ========================================================= */
    .loading {
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--muted);
    }

    .spinner {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        border: 2px solid rgba(var(--text-rgb), 0.18);
        border-top-color: rgba(var(--text-rgb), 0.55);
        animation: spin 0.9s linear infinite;
    }

    
    .empty {
        padding: 20px;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 12px;
        align-items: center;
        color: var(--muted);
    }

    .emptyIcon {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display: grid;
        place-items: center;
        background: rgba(var(--surface-rgb), 0.75);
        border: 1px solid var(--divider);
        font-size: 20px;
    }

    .emptyTitle {
        font-weight: 800;
        color: var(--text);
    }

    .emptySub {
        font-size: 13px;
        color: var(--muted);
    }

    /* =========================================================
       Pager
       ========================================================= */
    .pager {
        padding: 12px 14px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        border-top: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.65);
    }

    .pagerInfo {
        color: rgba(var(--muted-rgb), 0.95);
        font-size: 13px;
    }

    .pagerBtns {
        display: flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;
    }

    .pagerBtn {
        padding: 8px 10px;
        border-radius: 10px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        cursor: pointer;
        font-weight: 800;
        font-size: 13px;
    }

        .pagerBtn:hover {
            background: rgba(var(--surface-rgb), 0.92);
            border-color: rgba(var(--text-rgb), 0.14);
        }

        .pagerBtn:disabled {
            opacity: 0.55;
            cursor: not-allowed;
        }

        .pagerBtn.active {
            border-color: rgba(var(--primary-rgb), 0.45);
            box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.16);
        }

    /* =========================================================
       Dialogs / Overlays (Theme aware)
       ========================================================= */
    .overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.55);
        display: grid;
        place-items: center;
        padding: 18px;
        z-index: 9999;
    }

    .dialog {
        width: min(520px, 100%);
        border-radius: 16px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.98);
        box-shadow: 0 18px 60px rgba(0,0,0,0.35);
        padding: 16px;
        color: var(--text);
    }

    .dialogTitle {
        font-weight: 900;
        font-size: 16px;
        margin-bottom: 6px;
    }

    .dialogText {
        color: var(--muted);
        font-size: 13px;
        line-height: 1.45;
        margin-bottom: 12px;
    }

    .dialogActions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    /* Buttons (dialog + elsewhere in this page) */
    .btn {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--divider);
        background: rgba(var(--surface-rgb), 0.75);
        color: var(--text);
        cursor: pointer;
        font-weight: 700;
        font-size: 13px;
    }

        .btn:hover {
            background: rgba(var(--surface-rgb), 0.92);
            border-color: rgba(var(--text-rgb), 0.14);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn.ghost {
            background: transparent;
        }

        .btn.danger {
            background: rgba(var(--danger-rgb), 0.14);
            border-color: rgba(var(--danger-rgb), 0.30);
        }

            .btn.danger:hover {
                background: rgba(var(--danger-rgb), 0.20);
                border-color: rgba(var(--danger-rgb), 0.42);
            }

        .btn.small {
            padding: 8px 10px;
            border-radius: 10px;
            font-size: 12px;
            font-weight: 800;
        }

    /* PIN Input */
    .pinInput {
        width: 100%;
        font-weight: 800;
        letter-spacing: 0.22em;
        text-transform: uppercase;
    }

    .pinError {
        margin-top: 8px;
        font-size: 12px;
        color: var(--danger);
        font-weight: 800;
    }

    .pinDangerRow {
        margin-top: 10px;
        display: flex;
        justify-content: flex-start;
    }

    .linkDanger {
        background: transparent;
        border: none;
        color: rgba(var(--danger-rgb), 0.95);
        cursor: pointer;
        font-weight: 900;
        padding: 6px 0;
        text-decoration: underline;
        text-underline-offset: 3px;
    }

        .linkDanger:hover {
            color: rgba(var(--danger-rgb), 1);
        }

    /* Export Status */
    .export-status {
        padding: 12px 16px;
        margin: 14px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
    }

        .export-status.success {
            background-color: rgba(34, 197, 94, 0.15);
            border: 1px solid rgba(34, 197, 94, 0.4);
            color: #16a34a;
        }

        .export-status.error {
            background-color: rgba(239, 68, 68, 0.15);
            border: 1px solid rgba(239, 68, 68, 0.4);
            color: #dc2626;
        }
</style>

