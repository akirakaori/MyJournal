@page "/viewjournals"

@using JournalMaui.Models

<div class="page">


    <section class="card">
        <div class="cardHeader">
            <div style="display:flex; align-items:center; gap:10px; flex-wrap:wrap;">
                <h2 class="cardTitle">Saved Journals</h2>
                <span class="pill">@FilteredCount</span>
            </div>

            <div class="controls">
                <input class="search"
                       type="search"
                       placeholder="Search by title…"
                       value="@SearchTitle"
                       @oninput="OnSearchInput" />

                <select class="select" value="@PageSize" @onchange="OnPageSizeChanged" title="Rows per page">
                    <option value="5">5 / page</option>
                    <option value="10">10 / page</option>
                    <option value="15">15 / page</option>
                    <option value="20">20 / page</option>
                </select>

                <button class="sortBtn" type="button" @onclick="ToggleSort" title="Toggle sort by date">
                    @(SortDescending ? "Newest ↓" : "Oldest ↑")
                </button>
            </div>
        </div>

        @if (IsLoading)
        {
            <div class="loading">
                <div class="spinner"></div>
                <span>Loading journals…</span>
            </div>
        }
        else if (PagedEntries.Count == 0)
        {
            <div class="empty">
                <div class="emptyIcon">📓</div>
                <div>
                    <div class="emptyTitle">No matching journals</div>
                    <div class="emptySub">Try a different title keyword.</div>
                </div>
            </div>
        }

        else
        {
            <div class="tableWrap">
                <table class="journalsTable">

                    <thead>
                        <tr>
                            <th @onclick="() => SortBy(nameof(JournalEntries.DateKey))"
                                class="sortable @(SortColumn == nameof(JournalEntries.DateKey) ? "active" : "")">
                                Date
                                @SortIcon(nameof(JournalEntries.DateKey))
                            </th>

                            <th @onclick="() => SortBy(nameof(JournalEntries.Title))"
                                class="sortable @(SortColumn == nameof(JournalEntries.Title) ? "active" : "")">
                                Title
                                @SortIcon(nameof(JournalEntries.Title))
                            </th>

                            <th>Content Preview</th>
                            <th style="text-align:right;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var e in PagedEntries)
                        {
                            <tr>
                                <td class="td-date">@e.DateKey</td>
                                <td class="td-title">@GetTitle(e.Title)</td>
                                <td class="td-content">
                                    @* Strip HTML for preview - CHANGED *@
                                    @Trunc(StripHtml(e.Content), 180)
                                </td>
                                <td class="td-actions">
                                    <button class="iconBtn view"
                                            type="button"
                                            title="View formatted content"
                                            aria-label="View"
                                            @onclick="() => ViewEntry(e)">
                                        👁️
                                    </button>
                                    <button class="iconBtn"
                                            type="button"
                                            title="Edit"
                                            aria-label="Edit"
                                            @onclick="() => Edit(e.DateKey)">
                                        ✏️
                                    </button>

                                    <button class="iconBtn danger"
                                            type="button"
                                            title="Delete"
                                            aria-label="Delete"
                                            @onclick="() => PromptDelete(e.DateKey)">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="pager">
                <div class="pagerInfo">
                    Showing <b>@StartRow</b>–<b>@EndRow</b> of <b>@FilteredCount</b>
                </div>

                <div class="pagerBtns">
                    <button class="pagerBtn" @onclick="PrevPage" disabled="@IsFirstPage">Prev</button>

                    @foreach (var p in PageNumbersToShow)
                    {
                        <button class="pagerBtn @(p == CurrentPage ? "active" : "")"
                                @onclick="() => GoToPage(p)">
                            @p
                        </button>
                    }

                    <button class="pagerBtn" @onclick="NextPage" disabled="@IsLastPage">Next</button>
                </div>
            </div>
        }
    </section>

    @if (ShowDeleteConfirm)
    {
        <div class="overlay" @onclick="CancelDelete">
            <div class="dialog" @onclick:stopPropagation="true">
                <div class="dialogTitle">Delete this journal?</div>
                <div class="dialogText">
                    This will permanently delete the entry for <b>@PendingDeleteDateKey</b>.
                </div>

                <div class="dialogActions">
                    <button class="btn ghost" type="button" @onclick="CancelDelete">Cancel</button>
                    <button class="btn danger" type="button" @onclick="ConfirmDelete" disabled="@IsDeleting">
                        @(IsDeleting ? "Deleting..." : "Delete")
                    </button>
                </div>
            </div>
        </div>
    }
@* ADD THIS - Detail View Dialog *@
    <JournalDetailDialog IsVisible="@ShowDetailView"
                         Entry="@SelectedEntry"
                         OnClose="@CloseDetailView"
                         OnEditRequested="@EditFromDetailView" />
</div>

<style>
    :root {
        --bg: #0b1020;
        --card: rgba(255,255,255,0.06);
        --card2: rgba(255,255,255,0.08);
        --border: rgba(255,255,255,0.12);
        --text: rgba(255,255,255,0.92);
        --muted: rgba(255,255,255,0.6);
        --primary: #6ea8fe;
        --shadow: 0 12px 40px rgba(0,0,0,0.35);
        --radius: 16px;
    }

    .sortable {
        cursor: pointer;
        user-select: none;
    }

        .sortable:hover {
            background: rgba(255,255,255,0.06);
        }

        .sortable.active {
            color: #6ea8fe;
        }


    .card {
        background: linear-gradient(180deg, var(--card2), var(--card));
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .cardHeader {
        padding: 14px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .cardTitle {
        margin: 0;
        font-size: 14px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }

    .pill {
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        background: rgba(0,0,0,0.2);
        border: 1px solid var(--border);
    }

    .controls {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .search {
        width: min(320px, 100%);
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.14);
        background: rgba(0,0,0,0.18);
        color: rgba(255,255,255,0.92);
        outline: none;
        font-size: 13px;
    }

        .search::placeholder {
            color: rgba(255,255,255,0.45);
        }

        .search:focus {
            border-color: rgba(110, 168, 254, 0.55);
            box-shadow: 0 0 0 3px rgba(110, 168, 254, 0.18);
        }

    .select, .sortBtn {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.14);
        background: rgba(0,0,0,0.18);
        color: rgba(255,255,255,0.92);
        outline: none;
        font-size: 13px;
        cursor: pointer;
    }

    .tableWrap {
        overflow-x: auto;
    }

    /* ✅ avoid Bootstrap .table clash */
    .journalsTable {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
        background: transparent;
    }

        .journalsTable thead th {
            text-align: left;
            padding: 12px 14px;
            color: rgba(255,255,255,0.75);
            border-bottom: 1px solid rgba(255,255,255,0.12);
            background: rgba(0,0,0,0.12);
            white-space: nowrap;
        }

        .journalsTable tbody tr {
            background: rgba(0,0,0,0.10);
        }

            .journalsTable tbody tr:hover {
                background: rgba(255,255,255,0.06);
            }

        .journalsTable tbody td {
            padding: 12px 14px;
            border-bottom: 1px solid rgba(255,255,255,0.08);
            color: rgba(255,255,255,0.88);
            vertical-align: top;
        }


    .td-date {
        font-weight: 800;
        color: rgba(255,255,255,0.72);
        white-space: nowrap;
    }

    .td-title {
        font-weight: 900;
    }

    .td-content {
        color: var(--muted);
    }

    .td-actions {
        text-align: right;
        white-space: nowrap;
    }

    .iconBtn {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(0,0,0,0.16);
        color: rgba(255,255,255,0.9);
        cursor: pointer;
        display: inline-grid;
        place-items: center;
        line-height: 1;
        user-select: none;
        margin-left: 8px;
    }

        .iconBtn:hover {
            border-color: rgba(255,255,255,0.22);
            background: rgba(0,0,0,0.22);
        }

        .iconBtn:active {
            transform: translateY(1px);
        }

        .iconBtn.danger {
            border-color: rgba(255,255,255,0.14);
        }

    .loading {
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--muted);
    }

    .spinner {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        border: 2px solid rgba(255,255,255,0.25);
        border-top-color: rgba(255,255,255,0.75);
        animation: spin 0.9s linear infinite;
    }

    .empty {
        padding: 20px;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 12px;
        align-items: center;
        color: var(--muted);
    }

    .emptyIcon {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display: grid;
        place-items: center;
        background: rgba(0,0,0,0.2);
        border: 1px solid var(--border);
        font-size: 20px;
    }

    .emptyTitle {
        font-weight: 800;
        color: rgba(255,255,255,0.85);
    }

    .emptySub {
        font-size: 13px;
        color: var(--muted);
    }

    .pager {
        padding: 12px 14px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        border-top: 1px solid rgba(255,255,255,0.10);
        background: rgba(0,0,0,0.10);
    }

    .pagerInfo {
        color: rgba(255,255,255,0.72);
        font-size: 13px;
    }

    .pagerBtns {
        display: flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;
    }

    .pagerBtn {
        padding: 8px 10px;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.14);
        background: rgba(0,0,0,0.18);
        color: rgba(255,255,255,0.92);
        cursor: pointer;
        font-weight: 800;
        font-size: 13px;
    }

        .pagerBtn:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.22);
        }

        .pagerBtn:disabled {
            opacity: 0.55;
            cursor: not-allowed;
        }

        .pagerBtn.active {
            border-color: rgba(110, 168, 254, 0.55);
            box-shadow: 0 0 0 3px rgba(110, 168, 254, 0.18);
        }

    .overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.55);
        display: grid;
        place-items: center;
        padding: 18px;
        z-index: 9999;
    }

    .dialog {
        width: min(520px, 100%);
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.14);
        background: rgba(20, 24, 40, 0.98);
        box-shadow: 0 18px 60px rgba(0,0,0,0.55);
        padding: 16px;
        color: rgba(255,255,255,0.92);
    }

    .dialogTitle {
        font-weight: 900;
        font-size: 16px;
        margin-bottom: 6px;
    }

    .dialogText {
        color: rgba(255,255,255,0.70);
        font-size: 13px;
        line-height: 1.45;
        margin-bottom: 14px;
    }

    .dialogActions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .btn {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.14);
        background: rgba(255,255,255,0.06);
        color: rgba(255,255,255,0.92);
        cursor: pointer;
        font-weight: 700;
        font-size: 13px;
    }

        .btn:hover {
            background: rgba(255,255,255,0.10);
            border-color: rgba(255,255,255,0.22);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn.ghost {
            background: transparent;
        }

        .btn.danger {
            background: rgba(255, 80, 80, 0.18);
            border-color: rgba(255, 80, 80, 0.40);
        }

            .btn.danger:hover {
                background: rgba(255, 80, 80, 0.25);
                border-color: rgba(255, 80, 80, 0.55);
            }

    .iconBtn.view {
        background: linear-gradient(180deg, rgba(110, 168, 254, 0.15), rgba(59, 130, 246, 0.08));
        border-color: rgba(110, 168, 254, 0.25);
    }

        .iconBtn.view:hover {
            background: linear-gradient(180deg, rgba(110, 168, 254, 0.25), rgba(59, 130, 246, 0.15));
            border-color: rgba(110, 168, 254, 0.4);
        }
</style>
