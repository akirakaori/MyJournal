@using JournalMaui.Models
@using Microsoft.AspNetCore.Components
@using System.Text.RegularExpressions

@if (IsVisible && Entry != null)
{
    <div class="detailOverlay" @onclick="Close">
        <div class="detailDialog" @onclick:stopPropagation="true">
            <div class="detailHeader">
                <div class="detailHeaderContent">
                    <h2 class="detailTitle">@Entry.Title</h2>
                    <div class="detailMeta">
                        <span class="metaBadge">
                            <span class="metaIcon">📅</span>
                            <span>@Entry.DateKey</span>
                        </span>
                        <span class="metaBadge">
                            <span class="metaIcon">🕒</span>
                            <span>Updated: @Entry.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                        </span>
                    </div>
                </div>
                <button class="closeBtn" @onclick="Close" title="Close">✕</button>
            </div>

            <div class="detailBody">
                @* Render formatted HTML content using MarkupString *@
                <div class="formattedContent">
                    @((MarkupString)SanitizedContent)
                </div>
            </div>

            <div class="detailFooter">
                <div class="detailStats">
                    <span class="stat">Characters: <b>@ContentLength</b></span>
                    <span class="stat">Words: <b>@WordCount</b></span>
                </div>
                <div class="detailActions">
                    <button class="btn btnSecondary" @onclick="OnEdit">
                        <span class="btnIcon">✏️</span>
                        <span>Edit</span>
                    </button>
                    <button class="btn btnPrimary" @onclick="Close">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public JournalEntries? Entry { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnEditRequested { get; set; }

    /// <summary>
    /// Sanitizes HTML content to prevent XSS attacks while preserving formatting
    /// </summary>
    private string SanitizedContent
    {
        get
        {
            if (Entry == null || string.IsNullOrWhiteSpace(Entry.Content))
                return "<p class='empty'>No content available</p>";

            var content = Entry.Content;

            // Remove script tags and event handlers for security
            content = Regex.Replace(content, @"<script[^>]*>.*?</script>", "",
                RegexOptions.IgnoreCase | RegexOptions.Singleline);
            content = Regex.Replace(content, @"\bon\w+\s*=\s*[""'][^""']*[""']", "",
                RegexOptions.IgnoreCase);
            content = Regex.Replace(content, @"javascript:", "",
                RegexOptions.IgnoreCase);

            return content;
        }
    }

    private int ContentLength => Entry?.Content?.Length ?? 0;

    private int WordCount
    {
        get
        {
            if (Entry == null || string.IsNullOrWhiteSpace(Entry.Content))
                return 0;

            // Strip HTML tags for accurate word count
            var text = Regex.Replace(Entry.Content, @"<[^>]+>", " ");
            var words = text.Split(new[] { ' ', '\n', '\r', '\t' },
                StringSplitOptions.RemoveEmptyEntries);
            return words.Length;
        }
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

    private async Task OnEdit()
    {
        await OnEditRequested.InvokeAsync();
    }
}

