@page "/login"
@using MudBlazor

@inject MyJournal.Services.AppState AppState
@inject NavigationManager NavManager

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6" Elevation="6">

            <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">
                Login
            </MudText>

            <MudForm @ref="_form" Spacing="6">

                <MudTextField T="string"
                              Label="Username"
                              @bind-Value="_username"
                              Required="true"
                              RequiredError="Username is required" />

                <MudTextField T="string"
                              Label="4-Digit PIN"
                              @bind-Value="_pin"
                              InputType="InputType.Password"
                              Required="true"
                              RequiredError="PIN is required"
                              MaxLength="4" />

                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Class="mt-4"
                           Disabled="@_isBusy"
                           OnClick="HandleLogin">
                    Login
                </MudButton>

                <MudButton Variant="Variant.Text"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Small"
                           OnClick="@(() => NavManager.NavigateTo("/forgot-password"))">
                    Forgot Password?
                </MudButton>

                @if (_invalidCredentials)
                {
                    <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mt-4">
                        Invalid username or PIN
                    </MudAlert>
                }

            </MudForm>

        </MudPaper>
    </MudItem>
</MudGrid>